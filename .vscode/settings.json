{
  "python.testing.pytestArgs": ["."],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": false,
  "python.linting.banditEnabled": true,
  "python.linting.flake8Enabled": true,
  "python.languageServer": "Pylance",
  "python.analysis.typeCheckingMode": "basic",
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "90"],
  "files.associations": {
    "**/templates_jinja/**/*.j2": "jinja-html",
    "**/templates_jinja/**/*.html": "jinja-html",
    "**/templates_jinja/**/*.txt": "jinja-txt",
    "**/templates_django/**/*.html": "django-html",
    "**/templates_django/**/*.txt": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "**/*.html": "html"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[django-html]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[jinja-html]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "html.format.templating": true,
  "emmet.includeLanguages": {
    "django-html": "html",
    "jinja-html": "html"
  },
  "beautify.language": {
    "html": ["htm", "html", "django-html", "jinja-html"]
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.python"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "bodil.prettier-toml"
  },
  "jupyter.jupyterServerType": "remote",
  "cSpell.words": []
}
